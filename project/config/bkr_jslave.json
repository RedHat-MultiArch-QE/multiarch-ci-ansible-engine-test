{
    "resources": [
        {
            "recipesets": [
                {
                    "distro": "RHEL-7.3",
                    "arch": "X86_64",
                    "variant": "Server",
                    "keyvalue": ["DISKSPACE>=20000"],
                    "hostrequire": ["arch=X86_64", "memory>=2000", "system_type=Resource"],
                    "ks_append": [
                        "%post --log=/dev/console",
                        "set -x",
                        "echo 'PUB_KEY' >> .ssh/authorized_keys",
			"ls -alZ .ssh/authorized_keys",
			"cat .ssh/authorized_keys",
                        "%end",
			""
                    ]
                }
            ],
            "job_group": "ci-ops-multiarch-qe-aos",
            "bkr_jslave": "True"
        }
   ]
}
